#!/bin/sh
#USERNAME=...

[[ "$SVN_ADMIN" = "" ]] && echo "Var SVN_ADMIN is not detected ! Run at first: . varadd SVN_ADMIN '<url with port>'" && exit 1
[[ "$SVN_REPOS" = "" ]] && echo "Var SVN_REPOS is not detected ! Run at first: . varadd SVN_REPOS '<url>'" && exit 1

echo -n Enter password for $USERNAME: && read -s PASSWORD && echo

echo "ADDING repo through $SVN_ADMIN ..."
#-H "Accept: Application/json"
curr_dir=${PWD##*/}
RES=$(curl -X POST -u $USERNAME:$PASSWORD -H "Content-Type: application/json" "$SVN_ADMIN"/csvn/api/1/repository?format=json -s -k -d '{"name":"'$curr_dir'"}')
#echo $RES
echo $RES | jq ''
[[ $? != 0 ]] && cat $RES && exit 1
#,"applyStandardLayout":"false","applyTemplateId":1}
#csvn Release: 5.0.1

#[[ "$RES" =~ "errorMessage" ]] && exit 1
echo $RES | grep 'errorMessage' > /dev/null
[[ $? = 0 ]] && exit 1

cd ..

echo "Checkout.."
svn checkout --username="$USERNAME" --password="$PASSWORD" "$SVN_REPOS"/svn/$curr_dir

cd $curr_dir

echo "Initial commit..."
echo "#About" > readme.md
svn add readme.md
svn commit -m "Initial commit"
